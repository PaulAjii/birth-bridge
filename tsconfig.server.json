{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"rootDir": ".",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"noEmit": false,
		"lib": ["ES2023"],
		"types": ["node"]
	},
	"include": ["server.ts"],
	"exclude": ["node_modules", "src"]
}
