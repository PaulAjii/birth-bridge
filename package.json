{
	"name": "birth-bridge",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"description": "This is a vue and typescript app built for the MedInnovate Hackathon in the Maternal and Child health. It features an Electronic Medical Record which also doubles as a Referral system for Pregnant women.",
	"scripts": {
		"dev": "vite && npx json-server --watch ./src/db/data.json",
		"build": "vue-tsc -b && vite build",
		"preview": "vite preview",
		"db": "npx json-server --watch ./src/db/data.json",
		"start": "ts-node-esm --project tsconfig.server.json server.ts",
		"dev:server": "nodemon --project tsconfig.server.json server.ts",
		"post-build": "npx json-server --watch ./src/db/data.json"
	},
	"dependencies": {
		"@kalimahapps/vue-icons": "^1.7.1",
		"@tailwindcss/vite": "^4.0.7",
		"axios": "^1.7.9",
		"dotenv": "^16.4.7",
		"express": "^4.21.2",
		"json-server": "1.0.0-beta.3",
		"pinia": "^3.0.1",
		"tailwindcss": "^4.0.7",
		"uuid": "^11.1.0",
		"vue": "^3.5.13",
		"vue-router": "4"
	},
	"devDependencies": {
		"@types/express": "^5.0.0",
		"@types/json-server": "^0.14.7",
		"@types/node": "^22.13.5",
		"@vitejs/plugin-vue": "^5.2.1",
		"@vue/tsconfig": "^0.7.0",
		"nodemon": "^3.1.9",
		"ts-node": "^10.9.2",
		"typescript": "~5.7.2",
		"vite": "^6.1.0",
		"vue-tsc": "^2.2.0"
	}
}
